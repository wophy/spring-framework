<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "https://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>

	<bean id="testA" name="testA"
		  class="org.springframework.test.TestA"
		  init-method="init" destroy-method="destroy"
	>
		<property name="testB" ref="testB"></property>
	</bean>


	<bean id="testB" name="testB"
		  class="org.springframework.test.TestB">
		<property name="testA" ref="testA"></property>

	</bean>

	<bean id="testC" name="testC"
		  class="org.springframework.test.TestC"
		  init-method="init" destroy-method="destroy">
		<property name="testA" ref="testA"></property>

	</bean>

	<bean id="someMessageSource" name="yourMessageSource"
			class="org.springframework.context.support.StaticMessageSource"/>

	<bean class="org.springframework.context.support.ClassPathXmlApplicationContext" lazy-init="true">
		<constructor-arg value="someNonExistentFile.xml"/>
	</bean>

</beans>
